@using Mastermind


@code {

    [Parameter]
    public int i { get; set; }

    [Parameter]
    public Peg p { get; set; }

    [Parameter]
    public PegInput input { get; set; }

    string borderStyle = "";

    void InputPegClicked(MouseEventArgs args)
    {
        borderStyle = "border-style: solid; border-width: 5px; border-top: 5px solid rgba(0,0,0,1); padding: 5px;";

        input.ChangeActivePeg(i);
        StateHasChanged();
    }

    public void ResetPeg()
    {
        borderStyle = "";
        StateHasChanged();
    }
}

<td style="background-color:@p.ToString(); @borderStyle" @onclick="InputPegClicked"></td>