@page "/"

@{
    GameRound currentRound = new GameRound();

    currentRound.GetNewAttempt();
    currentRound.attempt_count++;
    currentRound.GetNewAttempt();
    currentRound.attempt_count++;

    object GetPeg(Peg p)
    {
        <td style="background-color:@p.ToString()">__</td>
        return null;
    }

    object GetRow(uint row)
    {
        for (uint i = 0; i < GameRound.PegWidth; i++)
        {
            GetPeg(currentRound.attempts[row, i]);
        }
        return null;
    }
}

<div class="row">
    <div class="col-sm-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Peg 1</th>
                    <th scope="col">Peg 2</th>
                    <th scope="col">Peg 3</th>
                    <th scope="col">Peg 4</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (uint i = 0; i < currentRound.attempt_count; i++)
                    {
                        <tr>
                            @GetRow(i)
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">

    </div>
</div>
